
<div class="container-fluid">
    <% flash.each do |name, msg| %>
                <%= content_tag :div, msg, :id =>"flash_#{name}" %>
            <% end %>
    <%= form_tag super_session_path do %>
        <div>
            <div class="input-prepend">
                <span class="add-on"><i class="icon-user"></i></span>
                <%= text_field_tag :username, params[:username], :placeholder=>'Username', :autocomplete=>'off' %>
            </div>
        </div>
        <div>
            <div class="input-prepend">
                <span class="add-on"><i class="icon-qrcode"></i></span>
                <%= password_field_tag :password, params[:password] , :placeholder=>'Password', :autocomplete=>'off' %>
            </div>
        </div>

        <div><input type="submit" class="btn btn-primary" value="Login" id="login_btn" name="login_btn" /></div>

        <div><%= link_to 'Forgot password', 'user/recovery' %></div>
    <% end %>
</div>